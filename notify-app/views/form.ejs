<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CheckIn-CheckOut Form</title>
    <!-- Link Stylesheet -->
    <link rel="stylesheet" href="style.css">
</head>

<body>

    <div class="outer-box">
        <h1>CheckIn Register</h1>
        <form action="/new" method="POST">
            <label for="fname">FirstName:</label>
            <input type="text" name="fname" id="fname" required autocomplete="additional-name"
                placeholder="First Name">
                <br>
                <br>
            <label for="lname">LastName:</label>
            <input type="text" name="lname" id="lname" required autocomplete="additional-name"
                placeholder="Last Name">
                <br>
                <br>
            <label for="email">Email:</label>
            <input type="email" name="email" id="email" required autocomplete="additional-name" placeholder="abc@gmail.com">
                <br>
                <br>
            <label for="number">Phone No:</label>
            <input type="number" name="number" id="number" min="0" autocomplete="additional-name" maxlength="10" placeholder="9999999999"><br><br>
            
            <label for="checkIn">Check-In</label>
            <input type="radio" name="check" id="checkIn" value="Check-In" required>
            <input type="text" minlength="10" maxlength="10" name="intime" class="form-control entry"
            placeholder="" />
            <br>
            <label for="checkOut">Check-Out</label>
            <input type="radio" name="check" id="checkOut" value="Check-Out" required><br><br>

            <button class="btn" type="submit">Submit</button>
        </form>

    </div>
    <script>
        const a=document.querySelector(".entry");
        
        function time(){
        
            let date=new Date();
            day=date.getMonth()+1;
        a.value=date.getUTCDate()+"/"+day+"/"+date.getFullYear()+" time- "+date.getHours()+":"+date.getMinutes()+":"+date.getSeconds();
        }
        setInterval(time,1000);
        
        
        </script>
</body>

</html>